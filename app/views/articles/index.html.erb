
<h1>名人姓名</h1>

  <p>
    <%= link_to '新增姓名', new_article_path %> 
  </p>
 
<table>
  <tr>
    <th>姓名</th>
    <th>字</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '显示', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article)%></td>
      <td><%= link_to '删除', article_path(article),
      method: :delete,data: {confirm: '确定删除?'} %></td>
    </tr>
  <% end %>
</table>